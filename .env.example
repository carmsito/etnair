# Variables d'environnement - ETNAir API

# Base de données PostgreSQL
DATABASE_URL=postgresql://etnair_user:etnair_pass@localhost:5432/etnair_db

# Configuration serveur
PORT=8080
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Origins (séparés par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-url.onrender.com

# MinIO / S3 (optionnel pour les images)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=etnair-images
S3_REGION=us-east-1
