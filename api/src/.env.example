# Configuration de l'API ETNAir
# Copiez ce fichier en .env et modifiez les valeurs

# Serveur
PORT=8080
NODE_ENV=development

# Base de donnees PostgreSQL
DATABASE_URL="postgresql://etnair_user:etnair_pass@localhost:5432/etnair_db"

# JWT - IMPORTANT: Changez ces valeurs en production!
JWT_SECRET=etnair_super_secret_key_change_this_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# MinIO / S3 (pour le stockage d'images)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=etnair-images
S3_REGION=us-east-1

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
