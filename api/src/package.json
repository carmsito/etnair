{
  "name": "etnair-api",
  "version": "1.0.0",
  "description": "API REST pour la plateforme de location ETNAir",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --watch . --ext ts --exec ts-node app.ts",
    "build": "prisma generate && tsc",
    "start": "prisma migrate deploy && node dist/app.js",
    "start:prod": "node dist/app.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "seed": "ts-node seeders/seed.ts",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\""
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts"],
    "moduleFileExtensions": ["ts", "js"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/dist/**"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "testTimeout": 30000
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "etnair",
    "api",
    "rest",
    "express",
    "prisma",
    "typescript"
  ],
  "license": "ISC"
}
